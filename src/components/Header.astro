---
import { isEnabled } from '../config/helpers';
import { t, translations } from '../lib/i18n';

const locale = (Astro.locals as any).locale || 'id';
const tr = translations.nav;

const nav = [
  { label: t(tr.home, locale), href: '/' },
  { label: t(tr.blog, locale), href: '/blog' },
  ...(isEnabled('products') ? [{ label: t(tr.products, locale), href: '/products' }] : []),
];

const currentPath = Astro.url.pathname;
---

<header class="sticky top-0 z-50 bg-surface/80 backdrop-blur-lg border-b border-surface-100">
  <nav class="container mx-auto px-4 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="text-xl font-bold hover:text-accent transition-colors">
      Narzo<span class="text-accent">.</span>Store
    </a>
    
    <!-- Desktop Navigation -->
    <div class="hidden md:flex items-center gap-6">
      {nav.map(item => (
        <a 
          href={item.href} 
          class={`hover:text-accent transition-colors ${
            currentPath === item.href ? 'text-accent' : ''
          }`}
        >
          {item.label}
        </a>
      ))}
      
      <!-- Language Switcher -->
      <button 
        id="lang-toggle"
        class="flex items-center gap-1 text-sm border border-surface-100 rounded-lg px-2 py-1 hover:bg-surface-50 transition-colors"
        aria-label="Toggle language"
        data-locale={locale}
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
        </svg>
        <span>{locale.toUpperCase()}</span>
      </button>
      
      <!-- Search icon -->
      <a href="/search" class="btn-icon" aria-label="Search">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
      </a>
    </div>
    
    <!-- Mobile Menu Button -->
    <button 
      id="mobile-menu-btn" 
      class="md:hidden btn-icon"
      aria-label="Toggle menu"
      aria-expanded="false"
    >
      <svg class="w-6 h-6 menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
      <svg class="w-6 h-6 close-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>
  </nav>
  
  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-surface-100">
    <div class="container mx-auto px-4 py-4 flex flex-col gap-2">
      {nav.map(item => (
        <a 
          href={item.href} 
          class={`py-2 px-4 rounded-lg hover:bg-surface-50 transition-colors ${
            currentPath === item.href ? 'text-accent bg-surface-50' : ''
          }`}
        >
          {item.label}
        </a>
      ))}
      
      <!-- Mobile Language Toggle -->
      <button 
        id="lang-toggle-mobile"
        class="py-2 px-4 rounded-lg hover:bg-surface-50 flex items-center gap-2 text-left"
        data-locale={locale}
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
        </svg>
        <span>Language: {locale.toUpperCase()}</span>
      </button>
      
      <!-- Mobile Search -->
      <a href="/search" class="py-2 px-4 rounded-lg hover:bg-surface-50 flex items-center gap-2">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
        </svg>
        {t(tr.search, locale)}
      </a>
    </div>
  </div>
</header>

<script>
  async function toggleLocale() {
    const btn = document.getElementById('lang-toggle') || document.getElementById('lang-toggle-mobile');
    const current = btn?.getAttribute('data-locale') || 'id';
    const newLocale = current === 'id' ? 'en' : 'id';
    
    await fetch('/api/set-locale', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ locale: newLocale })
    });
    
    // Reload to apply new locale
    window.location.reload();
  }
  
  document.getElementById('lang-toggle')?.addEventListener('click', toggleLocale);
  document.getElementById('lang-toggle-mobile')?.addEventListener('click', toggleLocale);
  
  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = menuBtn?.querySelector('.menu-icon');
  const closeIcon = menuBtn?.querySelector('.close-icon');
  
  menuBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.toggle('hidden');
    menuIcon?.classList.toggle('hidden');
    closeIcon?.classList.toggle('hidden');
    menuBtn.setAttribute('aria-expanded', String(!isOpen));
  });
</script>
