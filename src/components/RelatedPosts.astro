---
import ArticleCard from './ArticleCard.astro';
import type { Post } from '../lib/db';

interface Props {
  posts: Post[];
  locale: string;
}

const { posts, locale } = Astro.props;
---

<div class="grid md:grid-cols-3 gap-6">
  {posts.map(post => (
    <ArticleCard post={post} {locale} />
  ))}
</div>