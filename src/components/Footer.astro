---
import { t, translations } from '../lib/i18n';

const year = new Date().getFullYear();
const locale = (Astro.locals as any).locale || 'id';
---

<footer class="border-t border-surface-100 py-8 mt-auto">
  <div class="container mx-auto px-4 text-center">
    <div class="flex flex-wrap justify-center gap-6 mb-4 text-sm text-gray-400">
      <a href="/privacy" class="hover:text-accent transition-colors">{t(translations.footer.privacy, locale)}</a>
      <a href="/terms" class="hover:text-accent transition-colors">{t(translations.footer.terms, locale)}</a>
      <a href="/contact" class="hover:text-accent transition-colors">{t(translations.footer.contact, locale)}</a>
    </div>
    <p class="text-gray-500 text-sm">&copy; {year} Narzo Store. {t(translations.footer.rights, locale)}.</p>
  </div>
</footer>
