---
// src/pages/admin/products.astro
import AdminLayout from '../../layouts/AdminLayout.astro';
import { requireAdmin } from '../../lib/auth';

const redirect = await requireAdmin(Astro);
if (redirect) return redirect;

const db = Astro.locals.runtime.env.DB;
const products = await db.prepare(
  'SELECT * FROM products ORDER BY created_at DESC'
).all();
---

<AdminLayout title="Products">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold">Products</h1>
    <a href="/admin/products/new" class="bg-accent hover:bg-accent-hover text-white px-4 py-2 rounded-lg font-medium">+ New Product</a>
  </div>
  
  <div class="card overflow-x-auto bg-surface-50 p-6 rounded-xl border border-surface-100">
    <table class="w-full">
      <thead>
        <tr class="border-b border-surface-100">
          <th class="text-left py-3">Name</th>
          <th class="text-left py-3">Price</th>
          <th class="text-left py-3">Type</th>
          <th class="text-left py-3">Status</th>
          <th class="text-left py-3">Actions</th>
        </tr>
      </thead>
      <tbody>
        {products.results.map(product => (
          <tr class="border-b border-surface-100 last:border-0">
            <td class="py-3 font-medium">{product.name_id}</td>
            <td class="py-3">Rp {product.price.toLocaleString()}</td>
            <td class="py-3 text-gray-400">{product.is_digital ? 'Digital' : 'Physical'}</td>
            <td class="py-3">
              <span class={`px-2 py-1 rounded text-xs ${product.is_active ? 'bg-green-500/20 text-green-400' : 'bg-gray-500/20 text-gray-400'}`}>
                {product.is_active ? 'Active' : 'Inactive'}
              </span>
            </td>
            <td class="py-3 space-x-2">
              <a href={`/admin/products/${product.id}`} class="text-accent hover:underline">Edit</a>
              <button class="text-red-400 hover:text-red-300" onclick={`deleteProduct('${product.id}')`}>Delete</button>
            </td>
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</AdminLayout>