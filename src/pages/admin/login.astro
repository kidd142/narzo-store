---
// src/pages/admin/login.astro
import '../../styles/global.css';
const error = Astro.url.searchParams.get('error');
---

<!DOCTYPE html>
<html lang="id" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Login</title>
</head>
<body class="min-h-screen bg-surface text-gray-100 flex items-center justify-center">
  <div class="bg-surface-50 p-8 rounded-xl border border-surface-100 w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6">Admin Login</h1>
    
    {error && (
      <div class="bg-red-500/20 text-red-400 p-3 rounded-lg mb-4">
        Password salah
      </div>
    )}
    
    <form method="POST" action="/api/auth/login">
      <input type="password" name="password" placeholder="Enter password" required
             class="w-full px-4 py-3 bg-surface border border-surface-100 
                    rounded-lg mb-4 focus:outline-none focus:border-accent" />
      <button type="submit" class="w-full py-3 bg-accent hover:bg-accent-hover 
                                   rounded-lg font-medium transition-colors">
        Login
      </button>
    </form>
  </div>
</body>
</html>