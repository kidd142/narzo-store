---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ProductCard from '../../components/ProductCard.astro';
import { getProducts, getTotalProducts, getProductCategories } from '../../lib/db';

const db = Astro.locals?.runtime?.env?.DB;
const locale = Astro.currentLocale || 'id';

// Get params
const page = parseInt(Astro.url.searchParams.get('page') || '1');
const category = Astro.url.searchParams.get('category') || '';
const limit = 9;
const offset = (page - 1) * limit;

// Fetch data
const [products, total, categories] = await Promise.all([
  getProducts(db, { limit, offset, category }),
  getTotalProducts(db, category),
  getProductCategories(db)
]);

const totalPages = Math.ceil(total / limit);
const hasNext = page < totalPages;
const hasPrev = page > 1;

const title = locale === 'en' ? 'Products' : 'Produk';
const noProducts = locale === 'en' ? 'No products found.' : 'Tidak ada produk ditemukan.';
const allCategories = locale === 'en' ? 'All Categories' : 'Semua Kategori';
---

<BaseLayout title={title}>
  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4">
      <h1 class="text-4xl font-bold">{title}</h1>
      
      {/* Category Filter */}
      <div class="flex items-center gap-2">
        <select 
          class="bg-slate-800 text-white border border-slate-700 rounded-lg px-4 py-2 focus:ring-2 focus:ring-blue-500 outline-none"
          onchange="window.location.href = this.value"
        >
          <option value={`/products?page=1`} selected={!category}>{allCategories}</option>
          {categories.map(cat => (
            <option 
              value={`/products?page=1&category=${cat}`} 
              selected={category === cat}
            >
              {cat.charAt(0).toUpperCase() + cat.slice(1)}
            </option>
          ))}
        </select>
      </div>
    </div>
    
    <div class="grid md:grid-cols-3 gap-6">
      {products.map(product => (
        <ProductCard product={product} locale={locale} />
      ))}
    </div>
    
    {products.length === 0 && (
      <p class="text-gray-500 text-center py-12">{noProducts}</p>
    )}

    {/* Pagination */}
    {(hasPrev || hasNext) && (
      <div class="flex justify-center items-center gap-4 mt-12">
        {hasPrev ? (
          <a 
            href={`/products?page=${page - 1}${category ? `&category=${category}` : ''}`}
            class="px-4 py-2 bg-slate-800 text-white rounded-lg hover:bg-slate-700 transition-colors"
          >
            &larr; {locale === 'en' ? 'Previous' : 'Sebelumnya'}
          </a>
        ) : (
          <button disabled class="px-4 py-2 bg-slate-900 text-slate-600 rounded-lg cursor-not-allowed">
            &larr; {locale === 'en' ? 'Previous' : 'Sebelumnya'}
          </button>
        )}

        <span class="text-slate-400">
          Page {page} of {totalPages}
        </span>

        {hasNext ? (
          <a 
            href={`/products?page=${page + 1}${category ? `&category=${category}` : ''}`}
            class="px-4 py-2 bg-slate-800 text-white rounded-lg hover:bg-slate-700 transition-colors"
          >
            {locale === 'en' ? 'Next' : 'Selanjutnya'} &rarr;
          </a>
        ) : (
          <button disabled class="px-4 py-2 bg-slate-900 text-slate-600 rounded-lg cursor-not-allowed">
             {locale === 'en' ? 'Next' : 'Selanjutnya'} &rarr;
          </button>
        )}
      </div>
    )}
  </div>
</BaseLayout>
