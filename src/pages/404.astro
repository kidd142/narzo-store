---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, translations } from '../lib/i18n';

const locale = (Astro.locals as any).locale || 'id';
const tr = translations.notfound;
---

<BaseLayout title={t(tr.title, locale)}>
  <div class="container mx-auto px-4 py-24 text-center">
    <h1 class="text-9xl font-bold text-surface-100">404</h1>
    <p class="text-2xl text-gray-400 mt-4">{t(tr.message, locale)}</p>
    <a href="/" class="btn-primary inline-block mt-8">{t(tr.back_home, locale)}</a>
  </div>
</BaseLayout>
