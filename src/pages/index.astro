---
import BaseLayout from '../layouts/BaseLayout.astro';
import OptimizedImage from '../components/OptimizedImage.astro';
import { getPosts } from '../lib/db';
import { t, translations, getLocalizedArticle } from '../lib/i18n';

const db = Astro.locals?.runtime?.env?.DB;
const locale = (Astro.locals as any).locale || 'id';
const tr = translations.home;

// Get latest articles (featured first, then recent)
const featuredArticles = await getPosts(db, { limit: 6, featured: true });
const latestArticles = featuredArticles.length >= 3 
  ? featuredArticles.slice(0, 3) 
  : await getPosts(db, { limit: 3 }); // Fallback to latest if no featured
---

<BaseLayout 
  title={locale === 'en' ? 'Narzo - Tech Blog & Digital Lifestyle' : 'Narzo - Blog Teknologi & Gaya Hidup Digital'} 
  description={locale === 'en' ? 'Your go-to source for tech tips, tutorials, and digital lifestyle guides' : 'Sumber terpercaya untuk tips teknologi, tutorial, dan panduan gaya hidup digital'}
  ignoreSiteName={true}
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden pt-12 pb-24 md:pt-20 md:pb-32">
    <!-- Background Elements -->
    <div class="absolute inset-0 z-0 pointer-events-none">
      <div class="absolute inset-0 bg-grid-pattern opacity-20"></div>
      <div class="absolute -top-20 -left-20 w-96 h-96 bg-accent/20 rounded-full blur-[100px] animate-pulse-slow"></div>
      <div class="absolute -bottom-20 -right-20 w-96 h-96 bg-purple-600/10 rounded-full blur-[100px] animate-pulse-slow" style="animation-delay: 1.5s;"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent drop-shadow-lg">
        Narzo
      </h1>
      <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto drop-shadow-md">
        {locale === 'en' ? 'Tech Blog & Digital Lifestyle' : 'Blog Teknologi & Gaya Hidup Digital'}
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/blog" class="px-8 py-3 bg-primary hover:bg-primary-dark text-white rounded-lg font-semibold transition-all shadow-lg hover:shadow-primary/50">
          {locale === 'en' ? 'Read Articles' : 'Baca Artikel'}
        </a>
        <a href="/about" class="px-8 py-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm text-white rounded-lg font-semibold transition-all border border-white/10">
          {locale === 'en' ? 'About Us' : 'Tentang Kami'}
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Articles -->
  <section class="container mx-auto px-4 py-16">
    <div class="flex justify-between items-end mb-8">
      <div>
        <h2 class="text-3xl font-bold mb-2">{t(tr.latest_articles, locale)}</h2>
        <p class="text-gray-400">{t(tr.articles_subtitle, locale)}</p>
      </div>
      <a href="/blog" class="text-primary-light hover:text-accent transition-colors font-medium">{t(tr.view_all, locale)} →</a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {latestArticles.map((article, index) => {
        const { title } = getLocalizedArticle(article, locale);
        return (
        <a href={`/blog/${article.slug}`} class="group block bg-surface rounded-xl overflow-hidden hover:shadow-lg transition-all border border-white/5">
          <div class="aspect-video overflow-hidden">
            <OptimizedImage 
              src={article.cover_image || '/images/placeholder-article.jpg'} 
              alt={title}
              width={600}
              height={338}
              priority={index === 0}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
          </div>
          <div class="p-5">
            <h3 class="text-xl font-bold mb-2 group-hover:text-primary transition-colors line-clamp-2">
              {title}
            </h3>
            <p class="text-sm text-gray-400">{t(translations.blog.read_more, locale)} →</p>
          </div>
        </a>
      )})}
    </div>
  </section>

  <!-- CTA Section - Blog focused -->
  <section class="container mx-auto px-4 py-20 text-center">
    <div class="relative overflow-hidden bg-gradient-to-br from-primary/20 to-accent/20 rounded-3xl p-12 border border-white/10 shadow-2xl">
      <div class="absolute top-0 left-0 w-full h-full bg-grid-white/[0.05] [mask-image:linear-gradient(to_bottom,white,transparent)]"></div>
      <div class="relative z-10">
        <h2 class="text-3xl md:text-5xl font-bold mb-6">
          {locale === 'en' ? 'Stay Updated!' : 'Tetap Update!'}
        </h2>
        <p class="text-gray-300 mb-8 max-w-2xl mx-auto text-lg">
          {locale === 'en' 
            ? 'Get the latest tips, tutorials, and tech news directly from our blog.' 
            : 'Dapatkan tips, tutorial, dan berita teknologi terbaru langsung dari blog kami.'}
        </p>
        <a href="/blog" class="inline-block px-10 py-4 bg-primary hover:bg-primary-dark text-white rounded-xl font-bold text-lg shadow-lg hover:shadow-primary/50 transition-all transform hover:scale-105">
          {locale === 'en' ? 'Explore Blog' : 'Jelajahi Blog'}
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
