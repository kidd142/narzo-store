---
import BaseLayout from '../../layouts/BaseLayout.astro';

const ref = Astro.url.searchParams.get('ref');
const env = Astro.locals.runtime.env;
const DB = env.DB;
const locale = Astro.currentLocale || 'id';

if (!ref) {
  return Astro.redirect('/');
}

let order = null;
let transactions = [];
let isPaid = false;

if (DB) {
  order = await DB.prepare('SELECT * FROM orders WHERE merchant_ref = ?').bind(ref).first();
  
  if (order) {
    if (order.payment_status === 'PAID') {
      isPaid = true;
      // Fetch associated transactions for digital delivery
      const { results } = await DB.prepare('SELECT * FROM transactions WHERE merchant_ref = ?').bind(ref).all();
      transactions = results || [];
    }
  }
}

// Redirect if invalid order
if (!order) {
  return Astro.redirect('/');
}

// Translations
const t = {
  success: locale === 'en' ? 'Payment Successful!' : 'Pembayaran Berhasil!',
  successDesc: locale === 'en' ? 'Thank you for your purchase. Your digital items are ready.' : 'Terima kasih atas pembelian Anda. Item digital Anda sudah siap.',
  accessLibrary: locale === 'en' ? 'Access Library' : 'Akses Library',
  copied: locale === 'en' ? 'Copied!' : 'Disalin!',
  generating: locale === 'en' ? 'Generating your download links...' : 'Sedang membuat link download...',
  refresh: locale === 'en' ? 'Please refresh in a moment.' : 'Silakan refresh sejenak.',
  return: locale === 'en' ? 'Return to Store' : 'Kembali ke Toko',
  waiting: locale === 'en' ? 'Waiting for Payment...' : 'Menunggu Pembayaran...',
  waitingDesc: locale === 'en' ? 'Please complete your payment via Tripay.' : 'Silakan selesaikan pembayaran via Tripay.',
  orderId: locale === 'en' ? 'Order ID:' : 'ID Pesanan:',
  amount: locale === 'en' ? 'Amount:' : 'Jumlah:',
  method: locale === 'en' ? 'Method:' : 'Metode:',
  autoRefresh: locale === 'en' ? 'Page will refresh automatically...' : 'Halaman akan refresh otomatis...'
};
---

<BaseLayout title={isPaid ? t.success : t.waiting}>
  <div class="min-h-screen flex items-center justify-center p-4">
    <div class="max-w-md w-full bg-slate-800 rounded-xl p-8 border border-slate-700 shadow-2xl">
      
      {isPaid ? (
        <div class="text-center space-y-6">
          <div class="w-20 h-20 bg-green-500 rounded-full flex items-center justify-center mx-auto shadow-lg shadow-green-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          
          <div>
            <h1 class="text-2xl font-bold text-white mb-2">{t.success}</h1>
            <p class="text-slate-400">{t.successDesc}</p>
          </div>

          <div class="space-y-4">
            {transactions.length > 0 ? (
              transactions.map((tx: any) => (
                <div class="bg-slate-700/50 rounded-lg p-4 border border-slate-600 text-left">
                  <h3 class="font-medium text-white mb-1">{tx.product_name}</h3>
                  <div class="flex flex-col gap-2 mt-3">
                    <a 
                      href={`/library/${tx.library_token}`}
                      class="block w-full py-2 bg-blue-600 hover:bg-blue-500 text-white text-center rounded-lg font-medium transition-colors"
                    >
                      {t.accessLibrary}
                    </a>
                    <div class="flex items-center gap-2 mt-1 bg-slate-800 p-2 rounded text-xs text-slate-400">
                      <span class="flex-1 truncate">{`${Astro.url.origin}/library/${tx.library_token}`}</span>
                      <button 
                        onclick={`navigator.clipboard.writeText('${Astro.url.origin}/library/${tx.library_token}').then(() => alert('${t.copied}'))`}
                        class="text-blue-400 hover:text-blue-300 font-bold"
                      >
                        COPY
                      </button>
                    </div>
                  </div>
                </div>
              ))
            ) : (
              <div class="p-4 bg-yellow-500/10 border border-yellow-500/20 rounded-lg text-yellow-200 text-sm">
                {t.generating} <br/>{t.refresh}
              </div>
            )}
          </div>
          
          <div class="pt-4 border-t border-slate-700">
             <a href="/" class="text-slate-400 hover:text-white text-sm">{t.return}</a>
          </div>
        </div>
      ) : (
        <div class="text-center space-y-6">
          <div class="w-20 h-20 border-4 border-blue-500 border-t-transparent rounded-full animate-spin mx-auto"></div>
          
          <div>
            <h1 class="text-xl font-bold text-white mb-2">{t.waiting}</h1>
            <p class="text-slate-400 text-sm">{t.waitingDesc}</p>
          </div>

          <div class="bg-slate-700/50 p-4 rounded-lg text-left text-sm space-y-2">
            <div class="flex justify-between">
              <span class="text-slate-400">{t.orderId}</span>
              <span class="text-white font-mono">{order.merchant_ref}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-slate-400">{t.amount}</span>
              <span class="text-white font-bold">Rp {order.amount.toLocaleString()}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-slate-400">{t.method}</span>
              <span class="text-white uppercase">{order.payment_method}</span>
            </div>
          </div>

          <p class="text-xs text-slate-500">{t.autoRefresh}</p>
          
          <script define:vars={{ ref }}>
            setTimeout(() => {
              window.location.reload();
            }, 5000);
          </script>
        </div>
      )}

    </div>
  </div>
</BaseLayout>
