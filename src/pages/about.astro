---
import BaseLayout from '../layouts/BaseLayout.astro';
import { t, translations } from '../lib/i18n';

const locale = (Astro.locals as any).locale || 'id';
const tr = translations.about;
---

<BaseLayout title={t(tr.title, locale)} description={t(tr.subtitle, locale)}>
  <div class="container mx-auto px-4 py-16">
    <!-- Hero -->
    <section class="text-center mb-16">
      <h1 class="text-5xl font-bold mb-6 bg-gradient-to-r from-indigo-400 to-purple-400 bg-clip-text text-transparent">
        {t(tr.title, locale)}
      </h1>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        {t(tr.subtitle, locale)}
      </p>
    </section>

    <!-- Content -->
    <div class="grid md:grid-cols-2 gap-12 mb-16">
      <div class="card">
        <div class="text-4xl mb-4">üìù</div>
        <h2 class="text-2xl font-bold mb-4">{t(tr.mission_title, locale)}</h2>
        <p class="text-gray-400">
          {t(tr.mission_text, locale)}
        </p>
      </div>
      
      <div class="card">
        <div class="text-4xl mb-4">üí¨</div>
        <h2 class="text-2xl font-bold mb-4">{t(tr.support_title, locale)}</h2>
        <p class="text-gray-400">
          {t(tr.support_text, locale)}
        </p>
      </div>
    </div>

    <!-- Stats -->
    <section class="bg-surface-50 rounded-2xl p-8 md:p-12 text-center">
      <h2 class="text-2xl font-bold mb-8">{t(tr.stats_title, locale)}</h2>
      <div class="grid grid-cols-2 gap-8">
        <div>
          <div class="text-4xl font-bold text-accent">10K+</div>
          <div class="text-gray-400">{t(tr.customers, locale)}</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-accent">4.9‚òÖ</div>
          <div class="text-gray-400">{t(tr.rating, locale)}</div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="text-center mt-16">
      <h2 class="text-2xl font-bold mb-4">{locale === 'en' ? 'Explore Our Content' : 'Jelajahi Konten Kami'}</h2>
      <p class="text-gray-400 mb-8">{locale === 'en' ? 'Discover interesting articles about technology and digital lifestyle.' : 'Temukan artikel-artikel menarik tentang teknologi dan digital lifestyle.'}</p>
      <a href="/blog" class="btn-primary inline-block">
        {locale === 'en' ? 'Read Articles' : 'Baca Artikel'}
      </a>
    </section>
  </div>
</BaseLayout>
