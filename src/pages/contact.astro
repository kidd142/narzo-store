---
import BaseLayout from '../layouts/BaseLayout.astro';

const locale = (Astro.locals as any).locale || 'id';

const content = {
  id: {
    title: "Hubungi Kami",
    subtitle: "Kami siap membantu Anda. Silakan hubungi kami melalui formulir di bawah ini atau email langsung.",
    form: {
      name: "Nama Lengkap",
      email: "Alamat Email",
      subject: "Subjek",
      message: "Pesan",
      send: "Kirim Pesan"
    },
    info: {
      email: "Email",
      whatsapp: "WhatsApp",
      address: "Alamat",
      address_text: "Jakarta, Indonesia"
    }
  },
  en: {
    title: "Contact Us",
    subtitle: "We are here to help. Please contact us using the form below or email us directly.",
    form: {
      name: "Full Name",
      email: "Email Address",
      subject: "Subject",
      message: "Message",
      send: "Send Message"
    },
    info: {
      email: "Email",
      whatsapp: "WhatsApp",
      address: "Address",
      address_text: "Jakarta, Indonesia"
    }
  }
};

const currentContent = content[locale === 'en' ? 'en' : 'id'];
---

<BaseLayout title={currentContent.title}>
  <div class="container mx-auto px-4 py-12 max-w-5xl">
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-accent">{currentContent.title}</h1>
      <p class="text-gray-400 max-w-2xl mx-auto">{currentContent.subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="bg-surface-50 p-6 rounded-2xl border border-surface-200/50">
          <h3 class="text-xl font-semibold mb-6 text-gray-100 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {currentContent.info.email}
          </h3>
          <p class="text-gray-300 ml-9">
            <a href="mailto:support@narzo.store" class="hover:text-accent transition-colors">support@narzo.store</a>
          </p>
        </div>

        <div class="bg-surface-50 p-6 rounded-2xl border border-surface-200/50">
          <h3 class="text-xl font-semibold mb-6 text-gray-100 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            {currentContent.info.address}
          </h3>
          <p class="text-gray-300 ml-9">{currentContent.info.address_text}</p>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="bg-surface-50 p-6 md:p-8 rounded-2xl border border-surface-200/50">
        <form class="space-y-6" onsubmit="event.preventDefault(); alert('Message sent (demo)!');">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-300 mb-2">{currentContent.form.name}</label>
            <input type="text" id="name" name="name" class="w-full px-4 py-3 bg-surface-100 border border-surface-200 rounded-lg focus:outline-none focus:border-accent text-gray-100 placeholder-gray-500" placeholder={currentContent.form.name} required />
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium text-gray-300 mb-2">{currentContent.form.email}</label>
            <input type="email" id="email" name="email" class="w-full px-4 py-3 bg-surface-100 border border-surface-200 rounded-lg focus:outline-none focus:border-accent text-gray-100 placeholder-gray-500" placeholder={currentContent.form.email} required />
          </div>

          <div>
            <label for="subject" class="block text-sm font-medium text-gray-300 mb-2">{currentContent.form.subject}</label>
            <input type="text" id="subject" name="subject" class="w-full px-4 py-3 bg-surface-100 border border-surface-200 rounded-lg focus:outline-none focus:border-accent text-gray-100 placeholder-gray-500" placeholder={currentContent.form.subject} required />
          </div>

          <div>
            <label for="message" class="block text-sm font-medium text-gray-300 mb-2">{currentContent.form.message}</label>
            <textarea id="message" name="message" rows="4" class="w-full px-4 py-3 bg-surface-100 border border-surface-200 rounded-lg focus:outline-none focus:border-accent text-gray-100 placeholder-gray-500" placeholder={currentContent.form.message} required></textarea>
          </div>

          <button type="submit" class="w-full bg-accent hover:bg-accent-hover text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200">
            {currentContent.form.send}
          </button>
        </form>
      </div>
    </div>
  </div>
</BaseLayout>
