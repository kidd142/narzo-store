---
import BaseLayout from '../layouts/BaseLayout.astro';

const locale = (Astro.locals as any).locale || 'id';

const content = {
  id: {
    title: "Hubungi Kami",
    subtitle: "Ada pertanyaan atau butuh bantuan? Hubungi kami melalui email.",
    email_label: "Email",
    email_cta: "Kirim Email",
    response: "Kami akan merespon dalam 1-2 hari kerja.",
    address: "Alamat",
    address_text: "Jakarta, Indonesia"
  },
  en: {
    title: "Contact Us",
    subtitle: "Have questions or need help? Contact us via email.",
    email_label: "Email",
    email_cta: "Send Email",
    response: "We will respond within 1-2 business days.",
    address: "Address",
    address_text: "Jakarta, Indonesia"
  }
};

const currentContent = content[locale === 'en' ? 'en' : 'id'];
---

<BaseLayout title={currentContent.title}>
  <div class="container mx-auto px-4 py-16 max-w-2xl">
    <div class="text-center mb-12">
      <h1 class="text-3xl md:text-4xl font-bold mb-4 text-accent">{currentContent.title}</h1>
      <p class="text-gray-400">{currentContent.subtitle}</p>
    </div>

    <div class="space-y-6">
      <!-- Email Card -->
      <div class="bg-surface-50 p-8 rounded-2xl border border-surface-200/50 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-accent/10 rounded-full mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        
        <h2 class="text-xl font-semibold text-gray-100 mb-2">{currentContent.email_label}</h2>
        <p class="text-2xl font-bold text-accent mb-4">support@narzo.site</p>
        
        <a 
          href="mailto:support@narzo.site?subject=Pertanyaan dari Website" 
          class="inline-flex items-center gap-2 bg-accent hover:bg-accent-hover text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          {currentContent.email_cta}
        </a>
        
        <p class="text-gray-500 text-sm mt-4">{currentContent.response}</p>
      </div>

      <!-- Address Card -->
      <div class="bg-surface-50 p-6 rounded-2xl border border-surface-200/50">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 w-12 h-12 bg-surface-100 rounded-full flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-gray-100">{currentContent.address}</h3>
            <p class="text-gray-400">{currentContent.address_text}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
